<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="starcorp.common.entities.CreditAccount" table="CREDIT_ACCOUNT">
    	<id name="ID"><generator class="native"/></id>
    	<version name="version"/>
    	<many-to-one name="accountHolder" lazy="false"/>
    	<property name="credits"/>
		<set name="transactions" table="ACCOUNT_LEDGER" lazy="false">
			<key column="ENTITY_ID"/>
    		<composite-element class="starcorp.common.types.CashTransaction">
    			<property name="amount" column="ctAmount"/>
    			<property name="description" column="ctDesc"/>
    			<property name="year" column="ctYear"/>
    			<property name="month" column="ctMonth"/>
    		</composite-element>
    	</set>

    </class>
</hibernate-mapping>